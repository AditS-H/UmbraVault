FROM kalilinux/kali-rolling:latest
RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
    nmap \
    gobuster \
    sqlmap \
    nikto \
    hydra \
    john \
    hashcat \
    nuclei \
    amass \
    theharvester \
    dirsearch \
    ffuf \
    curl \
    wget \
    netcat-openbsd \
    masscan \
    whois \
    dnsutils \
    seclists \
    && apt-get clean && rm -rf /var/lib/apt/lists/*
WORKDIR /app
RUN mkdir -p /app/logs
CMD ["/bin/bash"]
